{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true
  },
  "include": ["src"]
}
